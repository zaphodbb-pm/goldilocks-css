<!doctype html>
<html class="no-js" lang="en">

<head>
    <meta charset="utf-8">
    <title>Goldilocks CSS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Lightweight CSS framework that is HTML and CSS3 standards compliant. No javascript required.">

    <link rel="manifest" href="{{site.url}}/site.webmanifest">
    <link rel="icon" href="{{site.url}}/favicon.png">

    <link rel="stylesheet" href='{{site.url}}/dist/goldilocks.all.min.css' media="screen">
</head>

<body id="page-top">

    {{ content }}

    {% include main_page/footer.liquid %}

    <!-- set up main page navbar -->
    <div id="page-main-navbar" class="page-wrapper-widgets has-slidebar" >
        {% include main_page/widget-bar.liquid %}

        {% include main_page/site-navbar.liquid %}

        {% include main_page/site-sidenav_links.liquid %}
    </div>



    <!--
        Loads svg based icons that can be referenced on any page.
        Make sure that the icons definition file is publicly accessable.
     -->

    <script type="text/javascript">
        fetch("{{site.url}}/public/icon-definitions.html")
            .then( response => response.text() )
            .then((data) => {
                let svgElements = document.createElement('div');
                svgElements.innerHTML = data;
                document.body.appendChild(svgElements);
            })

        fetch("{{site.url}}/public/icon-la-definitions.html")
            .then( response => response.text() )
            .then((data) => {
                let svgElements = document.createElement('div');
                svgElements.innerHTML = data;
                document.body.appendChild(svgElements);
            })
    </script>

    <!-- For prism.js only: convert html tags in <code class="language-html"> to &lt; and &gt; -->
    <script type="text/javascript">
        const getBlockReady = function(){
            const getCode = document.querySelectorAll("code.language-html");

            getCode.forEach( el => {
                el.innerHTML = el.innerHTML.replaceAll("<", "&lt;").replaceAll(">", "&gt;");
            });
        };

        document.addEventListener('DOMContentLoaded', getBlockReady, false);
    </script>



