<!-- For prism.js only: convert html tags in <code class="language-html"> to &lt; and &gt; -->
<script type="text/javascript">
    const getBlockReady = function(){
        const getCode = document.querySelectorAll("code.language-html");

        getCode.forEach( el => {
            el.innerHTML = el.innerHTML.replaceAll("<", "&lt;").replaceAll(">", "&gt;");
        });
    };

    document.addEventListener('DOMContentLoaded', getBlockReady, false);
</script>


