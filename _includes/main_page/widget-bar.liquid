<div class="widgetbar page-widgets">

    <form class="widgetbar-radios">
        <span>Theme</span>

        <fieldset>
            <legend>Choose Light or Dark Theme</legend>

            <label>
                <input type="radio" name="heading-sizes" checked onchange="setTheme('Light')">
                <svg class="icon"><use href="#icon-day"></use></svg>
                <span class="sr-only">Light / day mode</span>
            </label>

            <label>
                <input type="radio" name="heading-sizes" onchange="setTheme('Dark')">
                <svg class="icon"><use href="#icon-night"></use></svg>
                <span class="sr-only">Dark / night mode</span>
            </label>
        </fieldset>
    </form>

    <script>
        function setTheme(theme){
            if(theme === "Dark"){
                document.body.classList.add('main-theme-dark');
            }else{
                document.body.classList.remove('main-theme-dark');
            }
        }
    </script>

    <form class="widgetbar-radios">
        <fieldset>
            <legend>Choose Font Size</legend>
            <label>
                <input type="radio" name="text-sizes" checked onchange="setTextSize('1')" title="Select normal text size">
                <span>T1</span>
            </label>

            <label>
                <input type="radio" name="text-sizes" onchange="setTextSize('1.5')" title="Select 1.5 times text size">
                <span>T2</span>
            </label>

            <label>
                <input type="radio" name="text-sizes" onchange="setTextSize('2.25')" title="Select 2.25 times text size">
                <span>T3</span>
            </label>
        </fieldset>

    </form>

    <script>
        function setTextSize(size){
            document.querySelector(':root').style.setProperty("--base-scale", size);
        }
    </script>
</div>
